{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" },
    { "src": "/webhook", "dest": "/public/webhook.html" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}